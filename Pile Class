import java.util.*;
import java.io.*;

//this class will create the piles used by the players (you the player and the CPU player)
//each pile is half of the deck and is make of card objects
//because a deck of cards has 52 cards, it makes sence to hard code the value of 26 as the maximum pile size rather than making
//a place holder variable because it is a standard value which will not change
public class Pile {

        private int cardsInPile = 0; //the current ammount of cards in a pile
        private int maxCardsInPile = 26;// the maximum allowable cards in a pile, half the deck
        private ArrayList<Card> pile;//creates the framework for an arraylist of cards 
        
public Pile()//make an empty pile
{   
   pile = new ArrayList<Card>(maxCardsInPile);
}
 
      
public Card playCard()//remove the top card of the pile and return it
{ Card myCard;  
  int top = pile.size()-1; 
  if (top < 0)
   { myCard = null;
     System.out.println("Cannot play card from empty pile");
   }
  else       
    {myCard = pile.get(top);
    pile.remove(top); }
  return myCard;              
 }

// addCard places myCard on top of the pile 
public void addCard(Card myCard)
 {      
   pile.add(myCard);
  }

// addBottom places myCard on the bottom of the pile
public void addBottom(Card myCard)
{
   pile.add(0,myCard);
}

public void printPile()//not used in gameplay but included for debugging, this prints out a pile of cards
{
    System.out.println("Player Pile:");  
    for (int i=0; i<pile.size(); i++)
            System.out.println(pile.get(i)+" ");
    System.out.println(); 
}

public int getCardsInPile()//returns the number of cards left in a pile
{
   return(pile.size());
}



}
  
