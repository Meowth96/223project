            //i want to make a function that does the whole war thing somewhat seperately from the rest of the gameplay thing
            //Im not sure if we can access the discard counters from inside the war function
           public static int war ( int i){
           int playerDiscard=0;
           int CPUDiscard=0;
            if (i<=23){
                //basically skip three cards then compare the last set of cards
                if (playerHand[i + 3].value > CPUHand[i + 3].value) {
                    //player wins this round
                    playerDiscard+=10;
                } else if (CPUHand[i + 3].value > playerHand[i + 3].value) {
                    //CPU wins this round
                    CPUDiscard+=10;
                } else {
                    war(i);
                }
            }
            else if (i==24){
                //only three cards left
                if (playerHand[i + 2].value > CPUHand[i + 2].value) {
                    //player wins this round
                    playerDiscard+=8;
                } else if (CPUHand[i + 2].value > playerHand[i + 2].value) {
                    //CPU wins this round
                    CPUDiscard+=8;
                } else {
                    war(i);
                }
            }
            else if(i==25){
                //only two cards left
                if (playerHand[i + 1].value > CPUHand[i + 1].value) {
                    //player wins this round
                    playerDiscard+=6;
                } else if (CPUHand[i + 1].value > playerHand[i + 1].value) {
                    //CPU wins this round
                    CPUDiscard+=6;
                } else {
                    war(i);
                }

            }
            else { //i==26
                //only one card left
                if (playerHand[i].value > CPUHand[i].value) {
                    //player wins this round
                    playerDiscard+=4;
                } else if (CPUHand[i].value > playerHand[i].value) {
                    //CPU wins this round
                    CPUDiscard+=4;
                }
                //cards are the same
                else {
                    war(i);
                }
            }
            return playerDiscard,CPUDiscard,i;

        }
            //graphics majickss maybe
